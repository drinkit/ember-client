{{#if user.isAuthenticated}}
  {{#if modalManager.isShowBarTutorial}}
    {{bar-tutorial hideDialog=(action "hideDialog")}}
  {{/if}}
  <div style="padding-left:5px;padding-right:10px;padding-top:15px;">
    {{ingredient-chooser multiple=false initSelectedIds=selectedIngredientsIds selectedIngredientsIds=selectedIngredientsIds ingredients=ingredients changeIngredients="changeIngredients" needToClear=needToClear placeholder="Добавить в бар..." ingredientSelected="ingredientSelected"}}
    <div class="container-fluid bar-container">
      <div class="row">
        <div id="firstBarColumn" class="col-md-6">
          {{bar-category-box title="Крепкие алкогольные напитки" ingredients=ingredientsInCategories.hardSpirits onRemoveItem=(action "itemDeleted")}} {{bar-category-box title="Ликеры" ingredients=ingredientsInCategories.liquors onRemoveItem=(action "itemDeleted")}}
        </div>
        <div id="secondBarColumn" class="col-md-6">
          {{bar-category-box title="Слабоалкогольные напитки" ingredients=ingredientsInCategories.softSpirits onRemoveItem=(action "itemDeleted")}} {{bar-category-box title="Безалкогольные напитки" ingredients=ingredientsInCategories.nonSpirits onRemoveItem=(action
          "itemDeleted")}} {{bar-category-box title="Прочее" ingredients=ingredientsInCategories.other onRemoveItem=(action "itemDeleted")}}
        </div>
      </div>
    </div>
  </div>
    {{suggest-ingredients suggestedIngredients=suggestedIngredients initialized=suggestedIngredientsInitialized}}
{{else}}
  <span class="closed-bar-text">
    Чтобы воспользоваться баром, нужно <a {{action "showLogin"}}>авторизироваться</a> на сайте.
  </span>
{{/if}}
