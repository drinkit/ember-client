{{#if user.isAuthenticated}}
  <div style="padding-left:5px;padding-right:10px;padding-top:15px;">
    {{ingredient-chooser multiple=false ingredients=ingredients changeIngredients="changeIngredients" needToClear=needToClear placeholder="Добавить в бар..." selectedIngredientsIds=selectedIngredientsIds ingredientSelected="ingredientSelected"}}
    <div class="container-fluid bar-container">
      <div class="row">
        <div id="firstBarColumn" class="col-md-6">
          {{bar-category-box title="Крепкие алкогольные напитки" ingredients=ingredientsInCategories.hardSpirits onRemoveItem=(action "ingredientRemoved")}} {{bar-category-box title="Ликеры" ingredients=ingredientsInCategories.liquors onRemoveItem=(action "ingredientRemoved")}}
        </div>
        <div id="secondBarColumn" class="col-md-6">
          {{bar-category-box title="Слабоалкогольные напитки" ingredients=ingredientsInCategories.softSpirits onRemoveItem=(action "ingredientRemoved")}} {{bar-category-box title="Безалкогольные напитки" ingredients=ingredientsInCategories.nonSpirits onRemoveItem=(action
          "ingredientRemoved")}} {{bar-category-box title="Прочее" ingredients=ingredientsInCategories.other onRemoveItem=(action "ingredientRemoved")}}
        </div>
      </div>
    </div>
    <div id="removedIngredientsContainer" class="bar-category-box">
      <span>Закончились</span>
      <div>
        {{#each removedIngredients as |ingredient|}}
          <span class="ember-power-select-multiple-option">
            <span {{action "itemDeleted" ingredient}} class="ember-power-select-multiple-remove-btn">×</span>
            <div {{action "itemRestored" ingredient}} class="arrow-up-btn"/>
            {{ingredient.name}}
          </span>
        {{/each}}
      </div>
    </div>
  </div>
{{else}}
  <span>Бар доступен только для зарегистрированых пользователей.</span>
{{/if}}
