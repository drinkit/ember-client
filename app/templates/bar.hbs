<div style="padding-left:5px;padding-right:10px;padding-top:15px;">
  {{ingredient-chooser multiple=false ingredients=ingredients changeIngredients="changeIngredients" needToClear=needToClear placeholder="Добавить в бар..."}}
  <div class="container-fluid bar-container">
    <div class="row">
      <div id="firstBarColumn" class="col-md-6">
        {{bar-category-box title="Крепкие алкогольные напитки" ingredients=ingredientsInCategories.hardSpirits}}
        {{bar-category-box title="Ликеры" ingredients=ingredientsInCategories.liquors}}
      </div>
      <div id="secondBarColumn" class="col-md-6">
        {{bar-category-box title="Слабоалкогольные напитки" ingredients=ingredientsInCategories.softSpirits}}
        {{bar-category-box title="Безалкогольные напитки" ingredients=ingredientsInCategories.nonSpirits}}
        {{bar-category-box title="Прочее" ingredients=ingredientsInCategories.other}}
      </div>
    </div>
  </div>
</div>
