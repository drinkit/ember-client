<div id="main-frame" class="container-fluid">
  <div id="page-header">
    {{#link-to "builder"}}
      <img src="/assets/logo-main.png" />
    {{/link-to}}
    <div id="loginArea">
      {{#if isLoggedIn}}
        <span class="text-button">{{currentUser.displayName}}</span>
        <div class="vr" style="border-color:#ffffff;height:16px;margin-top:2px;margin-bottom:-3px;" />
        <a id="logoutButton" class="text-button" {{action 'logout'}}>Выйти</a>
      {{else}}
        <a id="loginButton" class="text-button" data-toggle="modal" data-target="#loginWindow">Войти</a>
      {{/if}}

    </div>
  </div>
  <div id="content-frame" class="container">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav-bar" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <div class="collapse navbar-collapse" id="main-nav-bar">
          <ul class="nav navbar-nav">
            <li>
              {{#link-to 'builder'}}Конструктор{{/link-to}}
            </li>
            <li>
              {{#link-to 'bar'}}Мой бар{{/link-to}}
            </li>
            <li><a href="#">Админ-панель</a></li>
          </ul>
          {{search-by-name search="search"}}
        </div>
      </div>
    </nav>
    <hr>
    <hr> {{outlet}}
  </div>
</div>
{{login-window authSuccess="authSuccess"}} {{signup-window}}
