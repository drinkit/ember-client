<div class="w-[247px] min-w-[247px]">
  <div id="filtersMenu" class="sticky mt-[[15px]] top-[[15px]]">
    <h3 class="font-georgia font-bold italic text-lg text-light_green text-center my-[15px]">{{localized ru='Формат коктейля' en='Cocktail format' uk='Формат коктейлю'}}</h3>
    <div id="cocktail-types-group" class="flex justify-around">
        <button {{on "click" (fn @toggleType 1)}} id="long-cocktail-button" type="button" class="w-[64px] h-[64px] border rounded-[4px] outline-none border-greengray hover:bg-gray-100 {{if this.isLongTypePressed 'active'}}" data-toggle="button" aria-pressed={{ this.isLongTypePressed }} autocomplete="off" title={{localized ru='лонг' en='long' uk='лонг'}} />
        <button {{on "click" (fn @toggleType 2)}} id="short-cocktail-button" type="button" class="w-[64px] h-[64px] border rounded-[4px] outline-none border-greengray hover:bg-gray-100 {{if this.isShortTypePressed 'active'}}" data-toggle="button" aria-pressed={{ this.isShortTypePressed }} autocomplete="off" title={{localized ru='короткий' en='short' uk='короткий'}} />
        <button {{on "click" (fn @toggleType 3)}} id="shot-cocktail-button" type="button" class="w-[64px] h-[64px] border rounded-[4px] outline-none border-greengray hover:bg-gray-100 {{if this.isShotTypePressed 'active'}}" data-toggle="button" aria-pressed={{ this.isShotTypePressed }} autocomplete="off" title={{localized ru='шот' en='shot' uk='шот'}} />
    </div>
    <h3 class="font-georgia font-bold italic text-lg text-light_green text-center my-[15px]">{{localized ru='Дополнительные опции' en='Additional options' uk='Додаткові опції'}}</h3>
    <div id="options-group" class="flex flex-wrap justify-between px-1">
      <button {{on "click" (fn @toggleOption 1)}} type="button" class="h-[21px] mb-[5px] mx-[5px] leading-none font-georgia font-bold italic text-sm text-orange_beach border-b border-dashed border-orange_beach outline-none hover:text-brick_red hover:border-brick_red {{if this.isBurningPressed 'active'}}" data-toggle="button" aria-pressed={{ this.isBurningPressed }} autocomplete="off">{{localized ru='горящий' en='burning' uk='палаючий'}}</button>
      <button {{on "click" (fn @toggleOption 5)}} type="button" class="h-[21px] mb-[5px] mx-[5px] leading-none font-georgia font-bold italic text-sm text-orange_beach border-b border-dashed border-orange_beach outline-none hover:text-brick_red hover:border-brick_red {{if this.isFlackyPressed 'active'}}" data-toggle="button" aria-pressed={{ this.isFlackyPressed }} autocomplete="off">{{localized ru='слоеный' en='layered' uk='шаруватий'}}</button>
      <button {{on "click" (fn @toggleOption 2)}} type="button" class="h-[21px] mb-[5px] mx-[5px] leading-none font-georgia font-bold italic text-sm text-orange_beach border-b border-dashed border-orange_beach outline-none hover:text-brick_red hover:border-brick_red {{if this.isIcePressed 'active'}}" data-toggle="button" aria-pressed={{ this.isIcePressed }} autocomplete="off">{{localized ru='со льдом' en='with ice' uk='з льодом'}}</button>
      <button {{on "click" (fn @toggleOption 4)}} type="button" class="h-[21px] mb-[5px] mx-[5px] leading-none font-georgia font-bold italic text-sm text-orange_beach border-b border-dashed border-orange_beach outline-none hover:text-brick_red hover:border-brick_red {{if this.isIBAPressed 'active'}}" data-toggle="button" aria-pressed={{ this.isIBAPressed }} autocomplete="off" title="{{localized ru='утвержденный международной ассоциацией барменов (IBA)' en='approved by the International Bartenders Association (IBA)' uk='затверджений Міжнародною асоціацією барменів (IBA)'}}">{{localized ru='официальный' en='official' uk='офіційний'}}</button>
      <button {{on "click" (fn @toggleOption 3)}} type="button" class="h-[21px] mb-[5px] mx-[5px] leading-none font-georgia font-bold italic text-sm text-orange_beach border-b border-dashed border-orange_beach outline-none hover:text-brick_red hover:border-brick_red {{if this.isCheckedPressed 'active'}}" data-toggle="button" aria-pressed={{ this.isCheckedPressed }} autocomplete="off" title="{{localized ru='проверенный модераторами' en='checked by moderators' uk='перевірений модераторами'}}">{{localized ru='проверенный' en='checked' uk='перевірений'}}</button>
    </div>
    <h3 class="font-georgia font-bold italic text-lg text-light_green text-center my-[15px]">{{localized ru='Выбор ингредиентов' en='Ingredient selection' uk='Вибір інгредієнтів'}}</h3>
    <IngredientChooser @multiple={{true}} @placeholder="{{localized ru='Напишите ингредиент' en='Write an ingredient' uk='Напишіть інгредієнт'}}..." @initSelectedIds={{@selectedIngredientsIds}} @ingredients={{@ingredients}} @selectedIngredientsIds={{@selectedIngredientsIds}} @changeIngredients={{@changeIngredients}} />
    {{#if this.currentUser.isAuthenticated}}
      <span {{on "click" this.addBarAsFilter}} class="font-gothic text-sm underline cursor-pointer">{{localized ru='Добавить ингредиенты из бара' en='Add ingredients from the bar' uk='Додати інгредієнти з бару'}}</span>
    {{else}}
      <span class="font-gothic text-sm underline opacity-50" title="{{localized ru='Доступно для зарегистрированых пользователей' en='Available for registered users' uk='Доступно для зареєстрованих користувачів'}}">{{localized ru='Добавить ингредиенты из бара' en='Add ingredients from the bar' uk='Додати інгредієнти з бару'}}</span>
    {{/if}}
    <span {{on "click" this.clearFilters}} class="font-gothic text-sm underline cursor-pointer">{{localized ru='Сбросить фильтры' en='Reset filters' uk='Скинути фільтри'}}</span>
  </div>
</div>
