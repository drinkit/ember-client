{{#if multiple}}
  <PowerSelectMultiple @searchEnabled={{true}} @selected={{this.selectedIngredients}} @searchField="name" @placeholder={{this.placeholder}} @options={{this.filteredIngredients}} @onChange={{action "changeIngredients"}} as |ingredient|>
    {{ingredient.name}} {{ingredient.description}}
  </PowerSelectMultiple>
{{else}}
  <PowerSelect @searchField="name" @placeholder={{this.placeholder}} @options={{this.filteredIngredients}} @onChange={{action "changeIngredients"}} as |ingredient|>
    {{ingredient.name}} {{ingredient.description}}
  </PowerSelect>
{{/if}}
