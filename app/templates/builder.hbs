<div id="builder-view" class="row">
  {{filters-menu clearFilters="clearFilters" changeIngredients="changeIngredients" toggleType="toggleType" toggleOption="toggleOption" ingredients=ingredients cocktailOptions=cocktailOptions cocktailTypes=cocktailTypes}}

  <div class="search-results col-md-9">
    {{#if foundCocktails}}
      <div class="row">
        {{#each recipesOnPage as |recipe|}}
          {{recipe-item recipe=recipe store=store selectedIngredients=selectedIngredientsIds}}
        {{/each}}
      </div>
      {{#if isPreviousPageExist}}
        {{#link-to 'builder' (query-params pageNumber=previousPageNumber) id="prevPageButton" class="btn btn-default" }}Назад{{/link-to}}
      {{/if}}
      {{#if isNextPageExist}}
        {{#link-to 'builder' (query-params pageNumber=nextPageNumber) id="nextPageButton" class="btn btn-default" }}Еще коктейлей...{{/link-to}}
      {{/if}}
      {{else if isSearchPerformed}}
      <img src="/assets/sadcocktail.png" />
      <p>Коктейлей по заданным критериям не найдено... Нам очень жаль :(</p>
    {{/if}}
  </div>
</div>
